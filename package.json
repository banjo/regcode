{
    "name": "regcode",
    "version": "0.0.2",
    "description": "Simple syntax to easily create Regular Expressions with code",
    "main": "dist/index.js",
    "types": "dist/index.d.ts",
    "dependencies": {
        "typescript": "^4.2.4",
        "winston": "^3.3.3"
    },
    "devDependencies": {
        "@types/jest": "^26.0.23",
        "@types/node": "^15.6.0",
        "jest": "^26.6.3",
        "jest-junit": "^12.0.0",
        "prettier": "^2.3.0",
        "ts-jest": "^26.5.6",
        "ts-node": "^10.0.0",
        "tslint": "^6.1.3",
        "tslint-config-prettier": "^1.18.0"
    },
    "scripts": {
        "build": "npx tsc --project tsconfig.json",
        "format": "npx prettier --write .",
        "lint": "tslint -p tsconfig.json",
        "watch": "npx tsc -w",
        "run": "node dist/index.js",
        "start": "npm run build && npm run run",
        "test": "npx jest --runInBand  --colors --verbose --reporters=default",
        "test:ci": "npx jest --ci --runInBand --silent --colors --coverage",
        "prepublish": "npm run build",
        "prepublishOnly": "npm run test && npm run lint",
        "preversion": "npm run lint",
        "version": "npm run format && git add -A src",
        "postversion": "git push && git push --tags"
    },
    "repository": {
        "type": "git",
        "url": "https://github.com/banjo/regcode"
    },
    "keywords": [
        "regex",
        "regular expression",
        "regular expressions",
        "regular expression generator",
        "generator",
        "regex generator",
        "regex code",
        "regex syntax"
    ],
    "author": "Anton Ã–dman",
    "license": "ISC"
}
